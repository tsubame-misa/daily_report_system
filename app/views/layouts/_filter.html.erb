<% if defined?(@date_range_error) && @date_range_error.present? %>
  <div class="alert alert-danger" role="alert">
    <%= @date_range_error %>
  </div>
<% end %>

<%= form_with url: filter_path, method: :get, local: true, class: "row g-2 align-items-end mb-3" do |f| %>
  <%= hidden_fields_except(:start_date, :end_date, :favorite_only) %>
  <div class="col-auto">
    <%= f.label :start_date, "開始日" %>
    <%= f.date_field :start_date, value: params[:start_date], class: "form-control" %>
  </div>
  <div class="col-auto">
    <%= f.label :end_date, "終了日" %>
    <%= f.date_field :end_date, value: params[:end_date], class: "form-control" %>
  </div>
  <div class="col-auto">
  <div class="form-check mt-2">
    <%= check_box_tag :favorite_only, "true", params[:favorite_only] == "true", class: "form-check-input" %>
    <%= label_tag :favorite_only, "お気に入りのみ", class: "form-check-label" %>
  </div>

</div>
  <div class="col-auto align-items-end">
    <%= f.submit "絞り込む", class: "btn btn-primary" %>
  </div>
  <div class="col-auto align-items-end">
    <%= link_to "クリア", filter_path, class: "btn btn-secondary m-0" %>
  </div>
<% end %>
