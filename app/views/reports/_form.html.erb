<%# ローカル変数 report を受け取る想定 %>
<% form_class ||= '' %> 

<%= form_with model: report, local: true, html: { class: form_class } do |form| %>
  <div class="mb-4">
    <div class="d-flex align-items-center mb-2">
      <%= form.label :report_date, '日付', class: "form-label me-2 mb-0 fw-bold" %>
      <i class="bi bi-calendar3 fs-5 text-secondary"></i> 
    </div>
    <%= form.date_field :report_date, class: "form-control form-control-lg" %>
  </div>

  <div class="mb-3">
    <%= form.label :title, 'タイトル', class: "form-label fw-bold" %> 
    <%= form.text_field :title, class: "form-control form-control-lg" %> 
  </div>

  <hr class="my-4">

  <div class="mb-4">
    <%= form.label :contents, '内容', class: "form-label fw-bold" %>
    <%= form.text_area :contents, class: "form-control", rows: 10 %> 
  </div>

  <div class="d-flex justify-content-end gap-3 mt-5">
    <%= link_to "キャンセル", reports_path, class: "btn btn-dark btn-lg text-white", style: "background-color: #343A40; border-color: #343A40;" %>

    <% submit_text = report.persisted? ? '更新' : '登録' %>
    <%= form.submit submit_text, class: "btn btn-dark btn-lg text-white", style: "background-color: #343A40; border-color: #343A40;" %> 
  </div>
<% end %>
