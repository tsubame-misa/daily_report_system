<%= form_with url: reports_path, method: :get, local: true, class: "row g-3 align-items-center mb-4" do |f| %>
  <div class="col-8">
    <%= f.label :q, "キーワード検索", class: "form-label visually-hidden" %>
    <div class="input-group">
      <span class="input-group-text">🔍</span>
      <%= f.text_field :q, value: params[:q], class: "form-control form-control-lg", placeholder: "タイトルや作成者を入力..." %>
    </div>
  </div>
  <div class="col-auto">
    <%= f.submit "検索", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
