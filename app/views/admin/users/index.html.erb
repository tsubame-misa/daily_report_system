<h1 class="mb-4">ユーザー一覧</h1>

<div class="mb-3">
  <%= link_to "新規ユーザー作成", new_admin_user_path, class: "btn btn-success" %>
</div>

<table class="table table-striped">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>権限</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? "管理者" : "一般" %></td>
        <td>
          <%= link_to "編集", edit_admin_user_path(user), class: "btn btn-primary btn-sm" %>
          <%= button_to "削除", admin_user_path(user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>