<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">ユーザー一覧</h1>
  <%= link_to "＋新規ユーザー作成", new_admin_user_path, class: "mb-0 btn btn-dark" %>
</div>

<table class="table table-hover">
  <thead >
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>権限</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? "管理者" : "一般" %></td>
        <td class="d-flex align-items-center">
          <%= link_to "編集", edit_admin_user_path(user), class: "btn btn-sm me-2 btn-outline-dark" %>
          <button type="button" class="btn btn-sm btn-outline-dark btn-hover-red" data-bs-toggle="modal" data-bs-target="#deleteModal-<%= user.id %>">
            削除
          </button>
        </td>
      </tr>
      <%= render "share/delete_alert", modal_id:user.id, confirm_text: "削除", message: "本当に削除しますか？", confirm_path:admin_user_path(user) %>
    <% end %>
  </tbody>
</table>