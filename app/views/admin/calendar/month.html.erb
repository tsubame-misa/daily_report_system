<div class="mb-3">
  <%= render 'layouts/calendar_tab' %>
</div>

<div class="d-flex align-items-center justify-content-between my-3">
  <%= link_to "← 前月", admin_calendar_month_path(month: @prev_month), class: "btn btn-outline-secondary" %>

  <h2 class="fs-4 fw-bold mb-0">
    <%= "#{@selected_year}年#{@selected_month}月の日報カレンダー" %>
  </h2>

  <%= link_to "次月 →", admin_calendar_month_path(month: @next_month), class: "btn btn-outline-secondary" %>
</div>

<!-- 📅 カレンダー表示 -->
<table class="calendar">
  <thead>
    <tr>
      <% %w[日 月 火 水 木 金 土].each do |day| %>
        <th><%= day %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @dates.each do |week| %>
      <tr>
        <% week.each do |date| %>
          <td class="<%= 'outside-month' if date.month != @selected_month %>">
            <div class="date-label"><%= date.day %></div>
            <div class="report-list">
              <% @reports_by_date[date]&.each do |report| %>
                <div class="report-item">
                  <%= link_to "#{report.user.name}", admin_report_path(report) %>
                </div>
              <% end %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
